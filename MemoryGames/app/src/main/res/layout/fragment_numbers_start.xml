<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumbersStartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/numberDisplayBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/number_display"

            app:layout_constraintBottom_toTopOf="@+id/startButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberAppearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_appear"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/white"
            android:textSize="22sp"

            app:layout_constraintBottom_toBottomOf="@+id/numberDisplayBox"
            app:layout_constraintEnd_toEndOf="@+id/numberDisplayBox"
            app:layout_constraintStart_toStartOf="@+id/numberDisplayBox"
            app:layout_constraintTop_toTopOf="@+id/numberDisplayBox" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/startButtonStyle"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberDisplayBox" />

        <Button
            android:id="@+id/helpIcon"
            android:text="\?"
            style="@style/helpIconStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>